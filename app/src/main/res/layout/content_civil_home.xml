<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.v7.widget.CardView
        android:id="@+id/CivilEventListCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">


            <!-- Sub Linear layout for Heading and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CivilEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:paddingRight="85dp"
                    android:text="Jay Hind"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#E40046" />


            </LinearLayout>
            <!-- Sub Linear Layout ends here -->


            <TextView

                android:id="@+id/CivilEventExcerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laboriosam cumque dignissimos eligendi, aut facilis fuga."
                android:textAppearance="@style/Base.TextAppearance.AppCompat" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp">


                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/CivilEventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classroom Complex" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>


